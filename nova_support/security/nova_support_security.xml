<odoo>
  <record id="group_nova_support_agent" model="res.groups">
    <field name="name">Nova Support Agent</field>
    <field name="category_id" ref="base.module_category_services"/>
  </record>

  <record id="rule_portal_own_tickets" model="ir.rule">
    <field name="name">Portal: only own tickets</field>
    <field name="model_id" ref="model_nova_support_ticket"/>
    <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
    <field name="domain_force">[('partner_id','child_of',[user.partner_id.commercial_partner_id.id])]</field>
  </record>
</odoo>
