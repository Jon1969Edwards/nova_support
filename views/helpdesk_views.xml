<odoo>
  <record id="nova_support_helpdesk_form" model="ir.ui.view">
    <field name="name">helpdesk.ticket.form.nova.support</field>
    <field name="model">helpdesk.ticket</field>
    <field name="inherit_id" ref="helpdesk.helpdesk_ticket_view_form"/>
    <field name="arch" type="xml">
      <xpath expr="//group[@name='customer']" position="inside">
        <field name="company_name"/>
        <field name="phone"/>
        <field name="cc_emails"/>
      </xpath>
    </field>
  </record>
</odoo>
